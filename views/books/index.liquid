{% layout 'layout.liquid'%}
{% block content %}
<div>
    <h2 class="display-6">All Books</h2>
    <div class="row">
        {% for book in books %}
        <div class="card" style="width: 18rem;">
            <h5 class="card-header">{{ book.title }}</h5>
            <div class="card-body">
                <h5 class="card-title">
                    Author: {{ book.author }}
                </h5>
                <p class="card-text">
                    Genre: {{ book.genre }}
                </p>
                <p class="card-text">
                    Pages: {{ book.pages }}
                </p>
                 <p class="card-text">
                    Read?: {{ book.read }}
                </p>
                <a href="/books/{{ book.id }}" class="btn btn-info">
                    View {{ book.title }}
                </a>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}